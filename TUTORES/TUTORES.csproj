  </ItemGroup>

  <ItemGroup>
    <Compile Update="Vistas\Login\MainPage.xaml.cs">
      <DependentUpon>MainPage.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Datos\" />
    <Folder Include="Colores\" />
    <Folder Include="Fuentes\" />
    <Folder Include="Vistas\Main\" />
    <Folder Include="Vistas\Emergentes\" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Vistas\Login\SelectionPage.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
  </ItemGroup>
</Project>