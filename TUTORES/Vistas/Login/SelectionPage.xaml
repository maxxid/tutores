<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TUTORES.Vistas.Login.SelectionPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavigationPage.HasNavigationBar="false">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Image Aspect="AspectFill" Source="wallpaper_init2.png" Grid.RowSpan="2"/>

        <Frame Grid.Row="0" Padding="1" CornerRadius="20" TranslationY="-11" HasShadow="True" BackgroundColor="#13304D">
            <Image Source="gobaseguir2.png" Margin="0,-70"></Image>
        </Frame>

        <StackLayout Grid.Row="1">
            <Grid Padding="15" MinimumHeightRequest="200">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>

                <BoxView Color="Transparent" />
                <Label
                Padding="0,50"
                FontSize="Title"
                HorizontalOptions="Start"
                Text="{Binding Bienvenido}"
                TextColor="White"
                VerticalOptions="End">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PushSelectionCommand}" />
                    </Label.GestureRecognizers>
                </Label>

                <Label
                FontSize="Medium"
                HorizontalOptions="Start"
                Text="Selecciona un estudiante:"
                TextColor="White"
                VerticalOptions="End" />

                <CollectionView
                Grid.Row="1"
                BackgroundColor="Transparent"
                EmptyView="No hay items para mostrar"
                ItemsSource="{Binding Roles}">

                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="1" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <RadioButton
                            Padding="10,10"
                            BackgroundColor="White"
                            CheckedChanged="RadioButton_OnCheckedChanged"
                            Content="{Binding Concat}"
                            CornerRadius="10"
                            GroupName="Roles"
                            TextColor="Black" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Frame
                Grid.Row="2"
                BackgroundColor="#13304D"
                CornerRadius="10">
                    <Label
                    HorizontalOptions="Center"
                    Text="Continuar"
                    TextColor="White" />
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PushSelectionCommand}" />
                    </Frame.GestureRecognizers>
                </Frame>
            </Grid>

        </StackLayout>
    </Grid>
</ContentPage>