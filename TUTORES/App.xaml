<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TUTORES.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Puedes agregar aquí otros recursos si es necesario -->

            <!-- Estilo global para NavigationPage -->
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#13304D" />
                <!-- Cambia el color del TopBar -->
                <Setter Property="BarTextColor" Value="White" />
                <!-- Cambia el color del texto del TopBar -->
            </Style>
            
            
            <!-- Define el color naranja aquí -->
            <Color x:Key="PrimaryOrangeColor">#EE7511</Color>

            <!-- Estilo para Pickers -->
            <Style TargetType="Picker">
                <Setter Property="TextColor" Value="{StaticResource PrimaryOrangeColor}" />
            </Style>
         

        </ResourceDictionary>
    </Application.Resources>
</Application>